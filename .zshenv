# No xdg dir
export XDG_DESKTOP_DIR=/dev/null

# termial for mimeopen
export TERMINAL="/usr/bin/alacritty -e"

# Support for android studio sdk and other craps
export ANDROID_STUDIO=/opt/android-studio
export ANDROID_SDK=/opt/android-sdk
export FLUTTER_HOME=/opt/flutter  
DENO_INSTALL=$HOME/.deno
CARGO_INSTALL=$HOME/.cargo
GO_INSTALL=/usr/local/go
YARN_INSTALL=$HOME/.yarn

# Android stuff
PATH=$PATH:$ANDROID_SDK/emulator:$ANDROID_SDK/tools:$ANDROID_SDK/platform-tools:$ANDROID_SDK/bin
PATH=$PATH:$ANDROID_STUDIO/tools
# Flutter stuff
PATH=$PATH:$FLUTTER_HOME/.pub-cache/bin:/usr/lib/dart/bin:$FLUTTER_HOME/bin

# Specific installs
PATH=$PATH:$GO_INSTALL/bin
PATH=$PATH:$YARN_INSTALL/bin
PATH=$PATH:$CARGO_INSTALL/bin

# # User installs
PATH=$PATH:$HOME/.bin

export PATH

# Longer passwords generated by password store
export PASSWORD_STORE_GENERATED_LENGTH=40

###############################
### Backend wayland support ###
###############################
# Better compatibility with java windows
export _JAVA_AWT_WM_NONREPARENTING=1

export CLUTTER_BACKEND=wayland

export WLC_USE_EGLDEVICE=1

#######################
### Keyboard config ###
#######################
# dead ' + c = รง
export GTK_IM_MODULE=cedilla
export QT_IM_MODULE=cedilla

#########################
### Defaults programs ###
#########################
# NeoVim is the best editor !!!!
export EDITOR="nvim"
# Setting up pager
export PAGER="less"
# Support for 256 colors in the term
export TERM="xterm-256color"
# Default browser depend on the display type
if [ -n "$DISPLAY" ]; then
    export BROWSER=/usr/bin/qutebrowser
else 
    export BROWSER=/usr/bin/links
fi

# Setting fd as the default source for fzf
export FZF_DEFAULT_COMMAND='fdfind --type f'

# Compatibility with a lot of colors
export TERM=xterm-256color

# Ignore some command in history
export HISTIGNORE="ls:cd:cd -:pwd:exit:date:* --help"
