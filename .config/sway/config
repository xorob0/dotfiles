## Media Keys
# Brightness control
bindsym 0x1008ff02 exec sudo brightnessctl set 10%+
bindsym 0x1008ff03 exec sudo brightnessctl set 10%-
# Sound control
bindsym 0x1008ff11 exec --no-startup-id pactl set-sink-mute 0 false && pactl set-sink-volume 0 -2% || pactl set-sink-volume 1 -2%
bindsym 0x1008ff12 exec --no-startup-id pactl set-sink-mute 0 toggle || pactl set-sink-mute 1 toggle
bindsym 0x1008ff13 exec --no-startup-id pactl set-sink-mute 0 false && pactl set-sink-volume 0 +2% || pactl set-sink-volume 1 +2%
#############
### Modes ###
#############
# Resizing interface
mode "resize" {
	# Left will shrink the containers width
	# Right will grow the containers width
	# Up will shrink the containers height
	# Down will grow the containers height
	bindsym $left resize shrink width 10 px or 10 ppt
	bindsym $down resize grow height 10 px or 10 ppt
	bindsym $up resize shrink height 10 px or 10 ppt
	bindsym $right resize grow width 10 px or 10 ppt
	# Ditto, with arrow keys
	bindsym Left resize shrink width 10 px or 10 ppt
	bindsym Down resize grow height 10 px or 10 ppt
	bindsym Up resize shrink height 10 px or 10 ppt
	bindsym Right resize grow width 10 px or 10 ppt
	# Return to default mode
	bindsym Return mode "default"
	bindsym Escape mode "default"
}
bindsym $mod+r mode "resize"
# Power interface
set $mode_power "System (l) lock, (s) suspend, (r) reboot, (Shift+s) shutdown, (w) sway, (x) i3, (Shift+w) Windows"
mode $mode_power {
	bindsym l exec $locker, mode "default"
	bindsym s exec "$locker ;systemctl suspend", mode "default"
	bindsym r exec systemctl reboot, mode "default"
	bindsym Shift+s exec systemctl poweroff -i, mode "default"
	bindsym w exec rm /tmp/xorgon, exit, mode "default"
	bindsym x exec touch /tmp/xorgon, exit, mode "default"
	bindsym Shift+w exec sudo grub-reboot 'Windaube' && systemctl reboot, mode "default"
	# Return to default mode
	bindsym Return mode "default"
	bindsym Escape mode "default"
}
bindsym $mod+p mode $mode_power
# Screenshots interface
set $mode_screenshot "Screenshot (a) full screen, (f) focused, (Shift+a) full screen video"
mode $mode_screenshot {
	bindsym a exec swaygrab ~/Pictures/Screenshots/$(date +"%Y-%m-%d_%H:%M:%S.png"), mode "default"
	bindsym f exec swaygrab -f ~/Pictures/Screenshots/$(date +"%Y-%m-%d_%H:%M:%S.png"), mode "default"
	bindsym Shift+a exec swaygrab -c ~/Pictures/Screenshots/$(date +"%Y-%m-%d_%H:%M:%S.webm"), mode "default"
	# return to default mode
	bindsym Return mode "default"
	bindsym Escape mode "default"
}
bindsym $mod+Print mode $mode_screenshot

# Status Bar
bar {
    output eDP-1
    output DP-3
	position bottom
	colors {
		statusline $nord6
		background $nord0 
		focused_workspace $nord10 $nord10 $nord0
		active_workspace $nord9 $nord9 $nord0
		inactive_workspace $nord3 $nord3 $nord0
		urgent_workspace $nord11 $nord12 $nord0
		binding_mode $nord9 $nord9 $nord0
	}
	separator_symbol " | "
	# Hidden bar and show with $mod
	mode hide
	hidden_state hide
	modifier $mod
	# 10:music -> music
	strip_workspace_numbers yes
	# Status_command i3status
	status_command  i3pystatus -c ~/.config/i3py.py
}
## Startup programs
# Launch dunst
exec dunst &
# Activate gestures for the trackpad
exec libinput-gestures-setup start &> /dev/null
# Automounting of usb keys
exec udiskie -0 -a -n -T -F --no-appindicator &
# Windows assignments
assign [class="Firefox"] → $WSHDMI
assign [class="qutebrowser"] → $WS1
assign [class="Riot"] → $WS9
# Worskpace assignments
workspace "0:HDMI" output HDMI-A-1
workspace "0:HDMI" output DP-3
workspace "10:term" output DP-5
workspace "1:www" output eDP-1
workspace "2" output eDP-1
workspace "9:chat" output eDP-1
## Launch apps
# Launch term on VGA when connected (fullscreen not working for the moment)
exec --no-startup-id zsh -c "if swaymsg -t get_outputs | grep DP-5 &> /dev/null; then swaymsg 'workspace "10:term"; exec kitty'; fullscreen; fi"
# Assign mpv to dock's HDMI when connected
exec --no-startup-id zsh -c "if swaymsg -t get_outputs | grep DP-3 &> /dev/null; then swaymsg 'assign [class="mpv"] → "0:HDMI"'; fi"
# Launch Riot on startup
# exec --no-startup-id swaymsg 'workspace "9:chat", exec riot-desktop'
# Launch firefox on startup
exec --no-startup-id swaymsg 'workspace "1:www", exec qutebrowser'
# Going to the first workspace
exec --no-startup-id swaymsg 'workspace "1:www"'
# Preparing the background for the lockscreen
exec --no-startup-id cp -R /var/cache/lock /tmp/lock
