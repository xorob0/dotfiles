### Key bindings
#
# Basics:
#
	 # kill focused window
	 bindsym $mod+Shift+q kill
	 bindsym Mod4+q kill

	 # Drag floating windows by holding down $mod and left mouse button.
	 # Resize them with right mouse button + $mod.
	 # Despite the name, also works for non-floating windows.
	 # Change normal to inverse to use left mouse button for resizing and right
	 # mouse button for dragging.
#	 floating_modifier $mod inverse

	 # reload the configuration file
	 bindsym $mod+Shift+c reload

	 # exit sway (logs you out of your wayland session)
	 bindsym $mod+Shift+e exit
#
# Moving around:
#
	 # Move your focus around with $mod+[h|j|k|l], like vim
	 bindsym $mod+h focus left
	 bindsym $mod+j focus down
	 bindsym $mod+k focus up
	 bindsym $mod+l focus right
	 # or use $mod+[up|down|left|right]
	 bindsym $mod+Left focus left
	 bindsym $mod+Down focus down
	 bindsym $mod+Up focus up
	 bindsym $mod+Right focus right

	 # _move_ the focused window with the same, but add Shift
	 bindsym $mod+Shift+h move left
	 bindsym $mod+Shift+j move down
	 bindsym $mod+Shift+k move up
	 bindsym $mod+Shift+l move right
	 # ditto, with arrow keys
	 bindsym $mod+Shift+Left move left
	 bindsym $mod+Shift+Down move down
	 bindsym $mod+Shift+Up move up
	 bindsym $mod+Shift+Right move right
#
# Workspaces:
#
	 # Set names for workspace
	 set $W01 1:www
	 set $W02 2
	 set $W03 3
	 set $W04 4
	 set $W05 5
	 set $W06 6
	 set $W07 7
	 set $W08 8
	 set $W09 9
	 set $W10 10
	 set $WM M
	 # Set fonction key for workspace
	 set $K01 0x26
	 set $K02 0xe9
	 set $K03 0x22
	 set $K04 0x27
	 set $K05 0x28
	 set $K06 minus
	 set $K07 0xe8
	 set $K08 0x5f
	 set $K09 0xe7
	 set $K10 0xe0
	 set $KM 0x1008ff14
	 # switch to workspace
	 bindsym $mod+$K01 workspace $W01
	 bindsym $mod+$K02 workspace $W02
	 bindsym $mod+$K03 workspace $W03
	 bindsym $mod+$K04 workspace $W04
	 bindsym $mod+$K05 workspace $W05
	 bindsym $mod+$K06 workspace $W06
	 bindsym $mod+$K07 workspace $W07
	 bindsym $mod+$K08 workspace $W08
	 bindsym $mod+$K09 workspace $W09
	 bindsym $mod+$K10 workspace $W10
	 # move focused container to workspace
	 bindsym $mod+Shift+$K01 move container to workspace $W01
	 bindsym $mod+Shift+$K02 move container to workspace $W02
	 bindsym $mod+Shift+$K03 move container to workspace $W03
	 bindsym $mod+Shift+$K04 move container to workspace $W04
	 bindsym $mod+Shift+$K05 move container to workspace $W05
	 bindsym $mod+Shift+$K06 move container to workspace $W06
	 bindsym $mod+Shift+$K07 move container to workspace $W07
	 bindsym $mod+Shift+$K08 move container to workspace $W08
	 bindsym $mod+Shift+$K09 move container to workspace $W09
	 bindsym $mod+Shift+$K10 move container to workspace $W10
#
# Layout stuff:
#
	 # You can "split" the current object of your focus with
	 # $mod+b or $mod+v, for horizontal and vertical splits
	 # respectively.
	 bindsym $mod+b splith
	 bindsym $mod+v splitv

	 # Switch the current container between different layout styles
	 bindsym $mod+s layout stacking
	 bindsym $mod+w layout tabbed
	 bindsym $mod+e layout toggle split

	 # Make the current focus fullscreen
	 bindsym $mod+f fullscreen

	 # Toggle the current focus between tiling and floating mode
	 bindsym $mod+Shift+space floating toggle

	 # Swap focus between the tiling area and the floating area
	 bindsym $mod+space focus mode_toggle

	 # move focus to the parent container
	 bindsym $mod+a focus parent
#
# Brightness
#
	bindsym 0x1008ff02 exec light -A 10
	bindsym 0x1008ff03 exec light -U 10
#
# Sound control
#
	bindsym 0x1008ff11 exec --no-startup-id pactl set-sink-mute 1 false && pactl set-sink-volume 1 -5% && killall -SIGUSR1 i3status
	bindsym 0x1008ff12 exec --no-startup-id pactl set-sink-mute 1 toggle && killall -SIGUSR1 i3status
	bindsym 0x1008ff13 exec --no-startup-id pactl set-sink-mute 1 false && pactl set-sink-volume 1 +5% && killall -SIGUSR1 i3status

#
# MPD control
#
	bindsym XF86AudioPrev exec sh /home/xorob0/.scripts/mpcPrev.sh$
	bindsym XF86AudioPlay exec mpc toggle
	bindsym XF86AudioNext exec mpc next

#
# Wifi
#
	bindsym Mod4+equal exec sudo netmenu
#
# Scratchpad:
#
	 # Sway has a "scratchpad", which is a bag of holding for windows.
	 # You can send windows there and get them back later.

	 # Move the currently focused window to the scratchpad
	 #bindsym $mod+Shift+minus move scratchpad

	 # Show the next scratchpad window or hide the focused scratchpad window.
	 # If there are multiple scratchpad windows, this command cycles through them.
	 #bindsym $mod+minus scratchpad show

#
# Lauch apps
#
	 # Meta+w launch browser
	 bindsym Mod4+w exec $browser
	 # Meta+Space launch menu
	 bindsym Mod4+space exec $menu
	 # Meta+s launch terminal
	 bindsym Mod4+s exec $term
     # Meta+f launch file browser
     bindsym Mod4+f exec $term -t Ranger -e ranger
	 # Meta+c launch speedcrunch
	 bindsym Mod4+c exec speedcrunch

# Power

set $mode_system (o) turn screen off, (l) logout, (s) suspend, (h) hibernate, (H) hybrid, (r) reboot, (Shift+s) shutdown, (w) reboot to Windows
mode "$mode_system" {
    bindsym l exec --no-startup-id i3-msg exit, mode "default"
    bindsym s exec --no-startup-id systemctl suspend , mode "default"
    bindsym h exec --no-startup-id systemctl hibernate, mode "default"
    bindsym H exec --no-startup-id systemctl hybrid-sleep, mode "default"
    bindsym r exec --no-startup-id systemctl reboot, mode "default"
	bindsym w exec --no-startup-id sudo grub-reboot "Windows 10" && systemctl reboot, mode "default"
    bindsym Shift+s exec --no-startup-id systemctl poweroff -i, mode "default"
    bindsym o exec --no-startup-id xset dpms force off, mode "default"
    # back to normal: Enter or Escape
    bindsym Return mode "default"
    bindsym Escape mode "default"
}

bindsym $mod+p mode "$mode_system"
# resize window (you can also use the mouse for that)
mode "resize" {
        # These bindings trigger as soon as you enter the resize mode

        # Pressing left will shrink the window’s width.
        # Pressing right will grow the window’s width.
        # Pressing up will shrink the window’s height.
        # Pressing down will grow the window’s height.
        bindsym h resize grow left 10 px or 10 ppt
        bindsym j resize grow down 10 px or 10 ppt
        bindsym k resize grow up 10 px or 10 ppt
        bindsym l resize grow right 10 px or 10 ppt

        bindsym control+j resize shrink up 10 px or 10 ppt
        bindsym control+k resize shrink down 10 px or 10 ppt
        bindsym control+l resize shrink left 10 px or 10 ppt

        # same bindings, but for the arrow keys
        bindsym Left move left 10 px
        bindsym Down move down 10 px
        bindsym Up move up 10 px
        bindsym Right move right 10 px

        # back to normal: Enter or Escape
        bindsym Return mode "default"
        bindsym Escape mode "default"
}

bindsym $mod+r mode "resize"


